<div class="w-50 mx-auto bg-white p-5 pt-3 shadow">
  <h2 class="text-center text-secondary">Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form text-secondary mb-3' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :name, class: 'control-label' %>
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email, class: 'control-label' %>
      <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'control-label' %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: 'control-label' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-primary w-100 mt-3' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>